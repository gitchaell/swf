generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Language {
  ES
  PT
  EN
}

enum Role {
  user
  assistant
}

model Session {
  id        String    @id @default(uuid())
  userEmail String?
  userName  String?
  userDob   DateTime?
  language  Language  @default(EN)
  createdAt DateTime  @default(now())
  messages  Message[]
  images    Image[]
}

model Message {
  id        String   @id @default(uuid())
  role      Role
  content   String
  sessionId String
  session   Session  @relation(fields: [sessionId], references: [id])
}

model Image {
  id        String  @id @default(uuid())
  url       String
  sessionId String
  session   Session @relation(fields: [sessionId], references: [id])
}
